def capitalize_first_last(sentence):
    words = sentence.split()
    result = []
    
    for word in words:
        if len(word) == 1:
            result.append(word.upper())
        else:
            new_word = word[0].upper() + word[1:-1] + word[-1].upper()
            result.append(new_word)
    
    return ' '.join(result)

# Example
s = input("Enter a sentence: ")
print(capitalize_first_last(s))
